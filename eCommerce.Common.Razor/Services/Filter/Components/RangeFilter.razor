@if(Filter is not null)
{
    <div class="d-flex justify-content-between mx-2 mb-2">
        <div>@Filter.Name</div>
        <div class="d-flex justify-content-end ">
            <input type="range" class="w-75" min="@Filter.MinValue" max="@Filter.MaxValue" @bind="Filter.SelectedValue" />
            <div class="ms-1">@Filter.SelectedValue</div>
        </div>
    </div>
}

@code {
    [Parameter]
    public FilterOption? Filter { get; set; }
}
