@if (Filter is not null)
{
    <EditForm Model="Filter">
        <InputRadioGroup @bind-Value="Filter.SelectedValue">
            @foreach (var option in Filter.Options)
            {
                @* Change .valid.modified:not([type = checkbox]) in app.css to remove square around radiobuttons*@
                <InputRadio class="outline-none" Value="@option.Id" />@option.Name
            }
        </InputRadioGroup>
    </EditForm>
}

@code {
    [Parameter]
    public FilterOption? Filter { get; set; }
}
